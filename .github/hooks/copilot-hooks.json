{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": "pwsh -NoProfile -File scripts/session-start.ps1",
        "powershell": "scripts/session-start.ps1",
        "cwd": ".github/hooks",
        "timeoutSec": 10,
        "comment": "Initialize session logging and agent state"
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "bash": "pwsh -NoProfile -File scripts/security-check.ps1",
        "powershell": "scripts/security-check.ps1",
        "cwd": ".github/hooks",
        "timeoutSec": 5,
        "comment": "Block dangerous commands and enforce security policies"
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "bash": "pwsh -NoProfile -File scripts/audit-log.ps1",
        "powershell": "scripts/audit-log.ps1",
        "cwd": ".github/hooks",
        "timeoutSec": 5,
        "comment": "Log tool execution results for audit trail"
      }
    ],
    "subagentStop": [
      {
        "type": "command",
        "bash": "pwsh -NoProfile -File scripts/subagent-quality-gate.ps1",
        "powershell": "scripts/subagent-quality-gate.ps1",
        "cwd": ".github/hooks",
        "timeoutSec": 10,
        "comment": "Validate subagent output quality before returning to parent"
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": "pwsh -NoProfile -File scripts/session-end.ps1",
        "powershell": "scripts/session-end.ps1",
        "cwd": ".github/hooks",
        "timeoutSec": 15,
        "comment": "Generate session summary and cleanup"
      }
    ]
  }
}
